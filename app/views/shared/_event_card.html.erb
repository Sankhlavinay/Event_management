<div class="mt-3 mb-3">
  <div class="row">
    <div class="col-lg-12">
      <div class="card text-center mb-2">
        <div class="card-header">
          <h2 class="fw-bold">Present Events</h3>
        </div>
      </div>
    </div>
    <% if @current_events.present? %>
      <% @current_events.each do |event| %>
        <div class="col-lg-4">
        <div class="card shadow mb-5">
          <div class="card-body text-center">
            <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTrq8mdQOGc0FwzK4t6d7dn6SdSaCJXbyGb0g&s" %>
            <p class="lead fw-bold text-primary "><%= event.title %></p>
            <p class="lead text-truncate"><%= event.description %></p>
            <p class="lead "><small><%= event.date&.strftime("%B %d, %Y") %> <%= event.time&.strftime("%I:%M %p") %></small></p>
            <% if current_user.organizer? %>
              <%= link_to 'View', booking_event_path(event), class: "btn btn-primary" %>
            <% else %>
              <%= link_to 'View', event_path(event), class: "btn btn-primary" %>
            <% end %>
            <% if current_user.organizer? %>
              <%= link_to 'Delete', booking_event_path(event), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you Sure to delete this event" } %>
            <% end %>
          </div>
        </div>
        </div>
      <% end %>
    <% else %>
      <h1 class="text-center">Sorry! No Event at the moment</h1>
    <% end %>
  </div>
</div>
<%= paginate @current_events if @current_events.present? %>

<hr>

