<div class="col-lg-6 mx-auto mt-3">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center">Log in</h2>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label mb-2 mt-2" %>
          <%= f.email_field :email, class: "form-control form-control-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label mb-2 mt-2" %>
          <%= f.password_field :password, class: "form-control form-control-lg " %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mt-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>



